<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Distributions - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2>Distributions for <%= current_organization.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item active">
        All Distributions
      </li>
    </ol>
  </div>
  <div class="col-lg-4">
    <div class="title-action">
      <%= download_button_to(csv_path(format: :csv, type: "Distribution"), text: "Export Distributions", size: "lg") if @distributions.length > 0 %>
      <%= new_button_to new_distribution_path(organization_id: current_organization), {text: "New Distribution"} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="row">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Partner</th>
                <th>Date of Distribution</th>
                <th>Source Inventory</th>
                <th>Total items</th>
                <th>Total value</th>
                <th>&nbsp;</th>
              </tr>
              </thead>
              <tbody>
              <%= render partial: "distribution_row", collection: @distributions %>
              <%= render partial: "distribution_total" %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Diaper Drive Participants - #{@diaper_drive_participant.contact_name} - Agencies - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2>Diaper Drive Participant Information for <%= @diaper_drive_participant.contact_name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to(diaper_drive_participants_path) do %>
          Diaper Drive Participants
        <% end %>
      </li>
      <li class="breadcrumb-item active">
        <%= @diaper_drive_participant.contact_name %>
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3><%= @diaper_drive_participant.contact_name %></h3>
        </div>
        <div class="ibox-content">
          <p>Business name: <%= @diaper_drive_participant.business_name %></p>
        <p>Contact Name: <%= @diaper_drive_participant.contact_name %></p>

        <% if @diaper_drive_participant.phone.present? %>
          <p>Phone: <%= @diaper_drive_participant.phone %></p>
        <% end %>
        <% if @diaper_drive_participant.email.present? %>
          <p>Email: <%= link_to @diaper_drive_participant.email, "mailto:#{@diaper_drive_participant.email}" %></p>
        <% end %>
          <p>Address: <%= @diaper_drive_participant.address %></p>
        <% if @diaper_drive_participant.present? %>
          <h4>Past Diaper Drives with this Partner</h4>
          <div class="row">
          <div class="col-xs-12">
              <!-- /.box-header -->
              <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                <tr>
                  <th>Date</th>
                  <th>Volume</th>
                  <th>Details</th>
                </tr>

                <% @diaper_drive_participant.donations.each do |donation| %>
                    <tr>
                      <td><%= donation.created_at.strftime("%m/%d/%Y") %></td>
                      <td><%= donation.line_items.total %></td>
                      <td><%= view_button_to donation, { text: "View donation details" } %></td>
                  </tr>
                  <% end %>
                </table>
              <!-- /.box-body -->

              </div>
            <!-- /.box -->
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Main content -->

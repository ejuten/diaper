<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "Base Items - #{@base_item.name}" %>
  <div class="col-lg-8">
    <h2>Base Items for <%= @base_item.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(admin_dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to(admin_base_items_path) do %>
          Base Items
        <% end %>
      </li>
      <li class="breadcrumb-item active">
        <%= @base_item.name %>
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3><%= @base_item.name %></h3>
        </div>
        <div class="ibox-content">
          <p>
            Size: <%= @base_item.size || "no size provided" %>
          </p>
          <h4>Items created from this Base Item</h4>
          <div class="row">
            <div class="col-xs-12">
              <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                  <tr>
                    <th>Name</th>
                    <th>Organization</th>
                  </tr>

                  <% @items.each do |item| %>
                    <tr id="item-row-<%= item.to_param %>">
                      <td><%= item.name %></td>
                      <td><%= link_to item.organization.name, organization_path(item.organization) %></td>
                    </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Main content -->




